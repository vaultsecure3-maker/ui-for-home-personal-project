<UserControl x:Class="DocumentManagement.Views.DocumentDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{StaticResource Gray50Brush}">

    <Grid RowDefinitions="Auto,*">
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource Gray200Brush}" BorderThickness="0,0,0,1"
                Padding="32,24,32,24">
            <TextBlock Text="Document Detail" Style="{StaticResource TitleLargeStyle}" />
        </Border>

        <Grid Grid.Row="1" ColumnDefinitions="*,320" Padding="32">
            <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource Gray200Brush}"
                   BorderThickness="1" CornerRadius="4" Padding="16">
                <Image Source="{Binding CurrentDocument.ThumbnailUrl}" Stretch="UniformToFill" />
            </Border>

            <Border Grid.Column="1" Background="White" BorderBrush="{StaticResource Gray200Brush}"
                   BorderThickness="1" CornerRadius="4" Padding="16" Margin="16,0,0,0">
                <StackPanel Spacing="12">
                    <TextBlock Text="{Binding CurrentDocument.Title}" Style="{StaticResource TitleMediumStyle}" />
                    <Separator Background="{StaticResource Gray200Brush}" />
                    <StackPanel Spacing="4">
                        <TextBlock Text="Created" Style="{StaticResource CaptionStyle}" />
                        <TextBlock Text="{Binding CurrentDocument.Created, StringFormat='MMM dd, yyyy'}"
                                 Style="{StaticResource BodySmallStyle}" />
                    </StackPanel>
                    <StackPanel Spacing="4">
                        <TextBlock Text="Correspondent" Style="{StaticResource CaptionStyle}" />
                        <TextBlock Text="{Binding CurrentDocument.Correspondent}" Style="{StaticResource BodySmallStyle}" />
                    </StackPanel>
                    <StackPanel Spacing="4">
                        <TextBlock Text="Type" Style="{StaticResource CaptionStyle}" />
                        <TextBlock Text="{Binding CurrentDocument.DocumentType}" Style="{StaticResource BodySmallStyle}" />
                    </StackPanel>
                    <StackPanel Spacing="12" Margin="0,12,0,0">
                        <Button Style="{StaticResource PrimaryButtonStyle}" Height="36">
                            <TextBlock Text="Save" />
                        </Button>
                        <Button Style="{StaticResource OutlineButtonStyle}" Height="36">
                            <TextBlock Text="Delete" Foreground="{StaticResource Red600Brush}" />
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

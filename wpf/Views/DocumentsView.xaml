<UserControl x:Class="DocumentManagement.Views.DocumentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{StaticResource Gray50Brush}">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource Gray200Brush}" BorderThickness="0,0,0,1"
                Padding="32,24,32,24">
            <StackPanel>
                <TextBlock Text="Documents" Style="{StaticResource TitleLargeStyle}" />
                <TextBlock Text="Browse, search, and manage your document archive" Style="{StaticResource BodySmallStyle}"
                          Margin="0,4,0,0" Foreground="{StaticResource Gray600Brush}" />
            </StackPanel>
        </Border>

        <!-- Quick Search -->
        <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource Gray200Brush}" BorderThickness="0,0,0,1"
                Padding="16">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20" Foreground="{StaticResource Gray400Brush}"
                                        VerticalAlignment="Center" />
                <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                        Padding="8,6,8,6" Style="{StaticResource TextBoxStyle}"
                        PlaceholderText="Quick search across all fields..."
                        Foreground="{StaticResource Gray900Brush}" />
            </StackPanel>
        </Border>

        <!-- Controls Bar -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource Gray200Brush}" BorderThickness="0,0,0,1"
                Padding="16">
            <Grid ColumnDefinitions="*,Auto,Auto" Spacing="16">
                <!-- Left: Filters -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                    <Button Style="{StaticResource OutlineButtonStyle}" Height="36" Padding="12,8,12,8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <materialDesign:PackIcon Kind="FilterVariant" Width="16" Height="16" />
                            <TextBlock Text="Filters" Style="{StaticResource BodySmallStyle}" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Right: View Toggle & Sort -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                    <ToggleButton Style="{StaticResource MaterialDesignFlatToggleButton}" ToolTip="Card view">
                        <materialDesign:PackIcon Kind="ViewAgenda" Width="20" Height="20" />
                    </ToggleButton>
                    <ToggleButton Style="{StaticResource MaterialDesignFlatToggleButton}" ToolTip="Table view">
                        <materialDesign:PackIcon Kind="ViewList" Width="20" Height="20" />
                    </ToggleButton>
                    <ComboBox Width="180" Padding="8,6,8,6">
                        <ComboBoxItem>Date (Newest)</ComboBoxItem>
                        <ComboBoxItem>Date (Oldest)</ComboBoxItem>
                        <ComboBoxItem>Title (A-Z)</ComboBoxItem>
                        <ComboBoxItem>Title (Z-A)</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Stats Bar -->
        <Border Grid.Row="3" Background="{StaticResource Gray50Brush}"
                BorderBrush="{StaticResource Gray200Brush}" BorderThickness="0,0,0,1"
                Padding="16">
            <StackPanel Orientation="Horizontal" Spacing="24">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <materialDesign:PackIcon Kind="FileDocument" Width="16" Height="16"
                                            Foreground="{StaticResource Gray600Brush}" VerticalAlignment="Center" />
                    <TextBlock Style="{StaticResource BodySmallStyle}">
                        <Run Text="{Binding Documents.Count}" FontWeight="Bold" Foreground="{StaticResource Gray900Brush}" />
                        <Run Text="documents" />
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="5" Background="{StaticResource Gray50Brush}">
            <ItemsControl ItemsSource="{Binding Documents}" Margin="24">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="240" Height="300" Margin="8" Background="White"
                               BorderBrush="{StaticResource Gray200Brush}" BorderThickness="1"
                               CornerRadius="4" Cursor="Hand">
                            <Grid RowDefinitions="160,*">
                                <!-- Thumbnail -->
                                <Image Grid.Row="0" Source="{Binding ThumbnailUrl}" Stretch="UniformToFill" />
                                <!-- Content -->
                                <StackPanel Grid.Row="1" Padding="12">
                                    <TextBlock Text="{Binding Title}" Style="{StaticResource BodySmallStyle}"
                                             FontWeight="SemiBold" TextTrimming="CharacterEllipsis"
                                             MaxHeight="40" TextWrapping="Wrap" />
                                    <TextBlock Margin="0,8,0,0" Style="{StaticResource CaptionStyle}">
                                        <Run Text="{Binding Created, StringFormat='MMM dd, yyyy'}" />
                                    </TextBlock>
                                    <ItemsControl ItemsSource="{Binding Tags}" Margin="0,8,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding Color}" CornerRadius="2" Padding="4,2,4,2" Margin="2">
                                                    <TextBlock Text="{Binding Name}" FontSize="10" Foreground="White" />
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Pagination -->
        <Border Grid.Row="6" Background="White" BorderBrush="{StaticResource Gray200Brush}" BorderThickness="0,1,0,0"
                Padding="24,12,24,12">
            <Grid ColumnDefinitions="*,Auto,*">
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                    <Button Style="{StaticResource OutlineButtonStyle}" Height="32" Padding="8">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <materialDesign:PackIcon Kind="ChevronLeft" Width="16" Height="16" />
                            <TextBlock Text="Previous" />
                        </StackPanel>
                    </Button>
                    <TextBlock VerticalAlignment="Center" Style="{StaticResource BodySmallStyle}">
                        <Run Text="Page " />
                        <Run Text="{Binding CurrentPage}" FontWeight="Bold" />
                        <Run Text=" of 5" />
                    </TextBlock>
                    <Button Style="{StaticResource OutlineButtonStyle}" Height="32" Padding="8">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="Next" />
                            <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="DocumentManagement.Views.Controls.SearchAndSort"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <StackPanel>
        <!-- Search Bar -->
        <Border Background="White" BorderBrush="{StaticResource Gray200Brush}" BorderThickness="0,0,0,1"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Grid.Column="0" Kind="Magnify" Width="20" Height="20"
                                        Foreground="{StaticResource Gray400Brush}"
                                        VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Grid.Column="1" Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                        BorderThickness="0" Background="Transparent"
                        materialDesign:HintAssist.Hint="{Binding SearchPlaceholder}"
                        Foreground="{StaticResource Gray900Brush}"
                        FontSize="14" VerticalAlignment="Center"/>
                <Button Grid.Column="2" Style="{StaticResource GhostButtonStyle}"
                        Width="32" Height="32" Padding="4"
                        Visibility="{Binding SearchQuery, Converter={StaticResource NullToVisibilityConverter}}"
                        Command="{Binding ClearSearchCommand}">
                    <materialDesign:PackIcon Kind="Close" Width="16" Height="16" />
                </Button>
            </Grid>
        </Border>

        <!-- Sort Controls -->
        <Border Background="White" BorderBrush="{StaticResource Gray200Brush}" BorderThickness="0,0,0,1"
                Padding="16">
            <Grid ColumnDefinitions="*,Auto">
                <ComboBox Grid.Column="1" Width="{Binding SortComboBoxWidth}" SelectedValue="{Binding SortOrder}" FontSize="13"
                         Height="36" Padding="12,8" BorderBrush="{StaticResource Gray200Brush}" Background="White"
                         ItemsSource="{Binding SortOptions}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Content}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
        </Border>
    </StackPanel>
</UserControl>

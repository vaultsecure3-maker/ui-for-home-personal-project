<UserControl x:Class="DocumentManagement.Views.Controls.PageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Border Background="White" BorderBrush="{StaticResource Gray200Brush}" BorderThickness="0,0,0,1"
            Padding="32,24">
        <Grid ColumnDefinitions="*,Auto">
            <StackPanel Grid.Column="0">
                <TextBlock Text="{Binding Title}" Style="{StaticResource TitleLargeStyle}" />
                <TextBlock Text="{Binding Description}"
                          Style="{StaticResource BodySmallStyle}"
                          Margin="0,4,0,0" Foreground="{StaticResource Gray600Brush}" />
            </StackPanel>
            <Button Grid.Column="1" Style="{StaticResource PrimaryButtonStyle}" Height="36" Padding="16,8"
                   Command="{Binding ActionCommand}"
                   Visibility="{Binding ShowActionButton, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <materialDesign:PackIcon Kind="{Binding ActionButtonIcon}" Width="16" Height="16" />
                    <TextBlock Text="{Binding ActionButtonText}" />
                </StackPanel>
            </Button>
        </Grid>
    </Border>
</UserControl>

<UserControl x:Class="DocumentManagement.Views.CorrespondentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:DocumentManagement.Views.Controls"
             Background="{StaticResource Gray50Brush}">

    <UserControl.Resources>
        <Style x:Key="TableHeaderStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Gray50Brush}"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200Brush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <Style x:Key="TableRowStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200Brush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50Brush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600Brush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource Blue600Brush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Header -->
        <controls:PageHeader Grid.Row="0"
                            Title="Correspondents"
                            Description="Manage organizations and individuals who send you documents"
                            ShowActionButton="True"
                            ActionButtonText="New Correspondent"
                            ActionButtonIcon="Plus" />

        <!-- Search and Sort -->
        <controls:SearchAndSort Grid.Row="1"
                               SearchPlaceholder="Search correspondents..."
                               SearchQuery="{Binding SearchQuery}"
                               SortOrder="{Binding SortOrder}"
                               ClearSearchCommand="{Binding ClearSearchCommand}"/>

        <!-- Table Content -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource Gray200Brush}" BorderThickness="1" Margin="16">
            <Grid RowDefinitions="Auto,*">
                <!-- Table Header -->
                <Border Grid.Row="0" Style="{StaticResource TableHeaderStyle}">
                    <Grid ColumnDefinitions="40,*,120,80">
                        <CheckBox Grid.Column="0" VerticalAlignment="Center" Margin="8,0"/>
                        <TextBlock Grid.Column="1" Text="Name" Style="{StaticResource BodySmallStyle}"
                                  FontWeight="Medium" Foreground="{StaticResource Gray700Brush}"/>
                        <TextBlock Grid.Column="2" Text="Documents" Style="{StaticResource BodySmallStyle}"
                                  FontWeight="Medium" Foreground="{StaticResource Gray700Brush}"/>
                        <TextBlock Grid.Column="3" Text="Actions" Style="{StaticResource BodySmallStyle}"
                                  FontWeight="Medium" Foreground="{StaticResource Gray700Brush}"/>
                    </Grid>
                </Border>

                <!-- Table Rows -->
                <ScrollViewer Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding FilteredCorrespondents}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource TableRowStyle}">
                                    <Grid ColumnDefinitions="40,*,120,80">
                                        <CheckBox Grid.Column="0" VerticalAlignment="Center" Margin="8,0"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Name}"
                                                  Style="{StaticResource BodySmallStyle}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding DocumentCount}"
                                                  Style="{StaticResource BodySmallStyle}" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                            <Button Style="{StaticResource ActionButtonStyle}"
                                                   ToolTip="Edit">
                                                <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16" />
                                            </Button>
                                            <Button Style="{StaticResource ActionButtonStyle}"
                                                   ToolTip="Delete">
                                                <materialDesign:PackIcon Kind="Delete" Width="16" Height="16" />
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Pagination -->
        <controls:Pagination Grid.Row="3"
                            CurrentPage="{Binding CurrentPage}"
                            TotalPages="{Binding TotalPages}"
                            PageSize="{Binding PageSize}"
                            Total="{Binding TotalCorrespondents}"
                            PaginationStart="{Binding PaginationStart}"
                            PaginationEnd="{Binding PaginationEnd}"
                            ItemLabel="correspondents"
                            NextPageCommand="{Binding NextPageCommand}"
                            PreviousPageCommand="{Binding PreviousPageCommand}"/>
    </Grid>
</UserControl>

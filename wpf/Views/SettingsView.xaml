<UserControl x:Class="DocumentManagement.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{StaticResource Gray50Brush}">

    <Grid RowDefinitions="Auto,*">
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource Gray200Brush}" BorderThickness="0,0,0,1"
                Padding="32,24,32,24">
            <StackPanel>
                <TextBlock Text="Settings" Style="{StaticResource TitleLargeStyle}" />
                <TextBlock Text="Configure application preferences" Style="{StaticResource BodySmallStyle}"
                          Margin="0,4,0,0" Foreground="{StaticResource Gray600Brush}" />
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" Padding="32">
            <StackPanel Width="480" Spacing="32">
                <!-- Appearance -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Appearance" Style="{StaticResource TitleMediumStyle}" />
                    <StackPanel Spacing="4">
                        <TextBlock Text="Theme" Style="{StaticResource CaptionStyle}" />
                        <ComboBox Text="{Binding Theme}" Padding="8,6,8,6">
                            <ComboBoxItem>Light</ComboBoxItem>
                            <ComboBoxItem>Dark</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <!-- Sync Settings -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Sync Settings" Style="{StaticResource TitleMediumStyle}" />
                    <StackPanel Spacing="4">
                        <CheckBox Content="Auto-sync" IsChecked="{Binding AutoSync}" />
                        <TextBlock Text="Automatically sync documents" Style="{StaticResource CaptionStyle}"
                                 Foreground="{StaticResource Gray600Brush}" Margin="20,0,0,0" />
                    </StackPanel>
                    <StackPanel Spacing="4" Margin="0,8,0,0">
                        <TextBlock Text="Sync Interval (seconds)" Style="{StaticResource CaptionStyle}" />
                        <Slider Value="{Binding SyncInterval}" Minimum="30" Maximum="300" Margin="0,4,0,0" />
                        <TextBlock Text="{Binding SyncInterval}" Style="{StaticResource CaptionStyle}"
                                 Foreground="{StaticResource Gray600Brush}" />
                    </StackPanel>
                </StackPanel>

                <!-- About -->
                <StackPanel Spacing="12" Padding="0,16,0,0" BorderBrush="{StaticResource Gray200Brush}"
                           BorderThickness="0,1,0,0">
                    <TextBlock Text="About" Style="{StaticResource TitleMediumStyle}" Margin="0,16,0,0" />
                    <TextBlock Text="Paperless-NGX Document Manager" Style="{StaticResource BodySmallStyle}" />
                    <TextBlock Text="Version 1.0.0" Style="{StaticResource CaptionStyle}"
                             Foreground="{StaticResource Gray600Brush}" />
                </StackPanel>

                <!-- Save Button -->
                <Button Style="{StaticResource PrimaryButtonStyle}" Height="40" Margin="0,16,0,0"
                       Command="{Binding SaveSettingsCommand}">
                    <TextBlock Text="Save Settings" />
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

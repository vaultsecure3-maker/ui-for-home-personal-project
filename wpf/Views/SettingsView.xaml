<UserControl x:Class="DocumentManagement.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#fafafa">

    <UserControl.Resources>
        <Style x:Key="SettingsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#e5e7eb"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="28,24,28,24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.05" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="IconBoxStyle" TargetType="Border">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="CardHeaderStyle" TargetType="StackPanel">
            <Setter Property="Spacing" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        <Style x:Key="SettingsLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#1f2937"/>
        </Style>
        <Style x:Key="SettingsDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#6b7280"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#f3f4f6" BorderThickness="0,0,0,1" Padding="40,28,40,28">
            <StackPanel>
                <TextBlock Text="Settings" FontSize="28" FontWeight="SemiBold" Foreground="#111827"/>
                <TextBlock Text="Manage your application preferences and configuration" FontSize="14" Foreground="#6b7280" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="40,32,40,32" VerticalScrollBarVisibility="Auto">
            <StackPanel Width="920" Spacing="28">

                <!-- Server URL Card -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel Spacing="20">
                        <!-- Header -->
                        <StackPanel Orientation="Horizontal" Spacing="14">
                            <Border Style="{StaticResource IconBoxStyle}" Background="#dbeafe">
                                <materialDesign:PackIcon Kind="Globe" Width="22" Height="22" Foreground="#2563eb"
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Server URL" FontSize="17" FontWeight="SemiBold" Foreground="#111827"/>
                                <TextBlock Text="Configure your Paperless-NGX server address" FontSize="13" Foreground="#6b7280" Margin="0,3,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Content -->
                        <StackPanel Spacing="16">
                            <StackPanel Spacing="6">
                                <TextBlock Text="Server Address" Style="{StaticResource SettingsLabelStyle}"/>
                                <TextBox Height="40" Padding="12,10,12,10" FontSize="14" Foreground="#111827" Background="White" BorderBrush="#d1d5db" BorderThickness="1" CornerRadius="8"/>
                                <TextBlock Text="Include http:// or https://" FontSize="12" Foreground="#9ca3af"/>
                            </StackPanel>

                            <Border Background="#f9fafb" BorderBrush="#e5e7eb" BorderThickness="1" Padding="18,14,18,14" CornerRadius="9">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="16">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <materialDesign:PackIcon Kind="CheckCircle" Width="20" Height="20" Foreground="#16a34a"/>
                                            <TextBlock Text="Connected" FontWeight="SemiBold" Foreground="#111827" VerticalAlignment="Center" FontSize="14"/>
                                        </StackPanel>
                                        <TextBlock Text="Last checked: 2 minutes ago" FontSize="12" Foreground="#6b7280" Margin="30,6,0,0"/>
                                    </StackPanel>
                                    <Button Grid.Column="1" Style="{StaticResource OutlineButtonStyle}" Height="38" Padding="18,0,18,0" VerticalAlignment="Center">
                                        <TextBlock Text="Test Connection" FontSize="13"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- API Token Card -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel Spacing="20">
                        <!-- Header -->
                        <StackPanel Orientation="Horizontal" Spacing="14">
                            <Border Style="{StaticResource IconBoxStyle}" Background="#e0e7ff">
                                <materialDesign:PackIcon Kind="Key" Width="22" Height="22" Foreground="#4f46e5"
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="API Authentication" FontSize="17" FontWeight="SemiBold" Foreground="#111827"/>
                                <TextBlock Text="Secure access token for server communication" FontSize="13" Foreground="#6b7280" Margin="0,3,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Content -->
                        <StackPanel Spacing="12">
                            <TextBlock Text="API Token" Style="{StaticResource SettingsLabelStyle}"/>
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                <TextBox Height="40" Padding="12,10,12,10" FontSize="14" Foreground="#111827" Background="White" BorderBrush="#d1d5db" BorderThickness="1" CornerRadius="8"/>
                                <Button Grid.Column="1" Style="{StaticResource OutlineButtonStyle}" Height="40" Padding="14,0,14,0" VerticalAlignment="Center">
                                    <TextBlock Text="Show" FontSize="13"/>
                                </Button>
                            </Grid>
                            <TextBlock Text="Found in your Paperless settings → API" FontSize="12" Foreground="#9ca3af"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Language Card -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel Spacing="20">
                        <!-- Header -->
                        <StackPanel Orientation="Horizontal" Spacing="14">
                            <Border Style="{StaticResource IconBoxStyle}" Background="#cffafe">
                                <materialDesign:PackIcon Kind="Earth" Width="22" Height="22" Foreground="#0891b2"
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Language" FontSize="17" FontWeight="SemiBold" Foreground="#111827"/>
                                <TextBlock Text="Select your preferred language" FontSize="13" Foreground="#6b7280" Margin="0,3,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Content -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="14">
                            <Button Grid.Column="0" Style="{StaticResource PrimaryButtonStyle}" Height="40">
                                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Earth" Width="17" Height="17"/>
                                    <TextBlock Text="English (US)" FontSize="14"/>
                                </StackPanel>
                            </Button>
                            <Button Grid.Column="1" Style="{StaticResource OutlineButtonStyle}" Height="40">
                                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Earth" Width="17" Height="17"/>
                                    <TextBlock Text="Srpski (Serbian)" FontSize="14"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Auto-Refresh Card -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel Spacing="20">
                        <!-- Header -->
                        <StackPanel Orientation="Horizontal" Spacing="14">
                            <Border Style="{StaticResource IconBoxStyle}" Background="#dcfce7">
                                <materialDesign:PackIcon Kind="Refresh" Width="22" Height="22" Foreground="#16a34a"
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="14">
                                    <StackPanel>
                                        <TextBlock Text="Auto-Refresh Documents" FontSize="17" FontWeight="SemiBold" Foreground="#111827"/>
                                        <TextBlock Text="Automatically check for new documents from the server" FontSize="13" Foreground="#6b7280" Margin="0,3,0,0"/>
                                    </StackPanel>
                                    <CheckBox Grid.Column="1" VerticalAlignment="Center" IsChecked="True"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>

                        <!-- Content -->
                        <StackPanel Spacing="16">
                            <StackPanel Spacing="8">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                    <TextBlock Text="Refresh Interval" Style="{StaticResource SettingsLabelStyle}"/>
                                    <TextBlock Grid.Column="1" Text="60 seconds" FontSize="13" Foreground="#6b7280"/>
                                </Grid>
                                <Slider Height="5" Minimum="10" Maximum="300" Value="60" Foreground="#2563eb"/>
                                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                                    <TextBlock Text="10s (Fast)" FontSize="12" Foreground="#9ca3af"/>
                                    <TextBlock Grid.Column="1" Text="5min (Battery Friendly)" FontSize="12" Foreground="#9ca3af" HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>

                            <Border Background="#f0fdf4" BorderBrush="#dcfce7" BorderThickness="1" Padding="16,12,16,12" CornerRadius="9">
                                <StackPanel Spacing="8">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <materialDesign:PackIcon Kind="Info" Width="17" Height="17" Foreground="#16a34a"/>
                                        <TextBlock Text="Last check: 2 minutes ago" FontSize="13" FontWeight="SemiBold" Foreground="#15803d" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="Next check: in 58 seconds" FontSize="13" Foreground="#16a34a" Margin="27,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Voice Commands Card -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel Spacing="20">
                        <!-- Header -->
                        <StackPanel Orientation="Horizontal" Spacing="14">
                            <Border Style="{StaticResource IconBoxStyle}" Background="#fef3c7">
                                <materialDesign:PackIcon Kind="Microphone" Width="22" Height="22" Foreground="#b45309"
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="14">
                                    <StackPanel>
                                        <TextBlock Text="Voice Commands" FontSize="17" FontWeight="SemiBold" Foreground="#111827"/>
                                        <TextBlock Text="Enable voice control for hands-free operation (English only)" FontSize="13" Foreground="#6b7280" Margin="0,3,0,0"/>
                                    </StackPanel>
                                    <CheckBox Grid.Column="1" VerticalAlignment="Center" IsChecked="False"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Thumbnail Cache Card -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel Spacing="20">
                        <!-- Header -->
                        <StackPanel Orientation="Horizontal" Spacing="14">
                            <Border Style="{StaticResource IconBoxStyle}" Background="#fed7aa">
                                <materialDesign:PackIcon Kind="Trash" Width="22" Height="22" Foreground="#d97706"
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Thumbnail Cache" FontSize="17" FontWeight="SemiBold" Foreground="#111827"/>
                                <TextBlock Text="Clear cached thumbnails to free up storage space" FontSize="13" Foreground="#6b7280" Margin="0,3,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Content -->
                        <Border Background="#f9fafb" BorderBrush="#e5e7eb" BorderThickness="1" Padding="18,14,18,14" CornerRadius="9">
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="16">
                                <StackPanel>
                                    <TextBlock Text="Currently using 125 MB" FontWeight="SemiBold" FontSize="14" Foreground="#111827"/>
                                    <TextBlock Text="Last cleared: 3 days ago" FontSize="12" Foreground="#6b7280" Margin="0,6,0,0"/>
                                </StackPanel>
                                <Button Grid.Column="1" Style="{StaticResource OutlineButtonStyle}" Height="38" Padding="16,0,16,0" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <materialDesign:PackIcon Kind="Trash" Width="17" Height="17"/>
                                        <TextBlock Text="Clear Cache" FontSize="13"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Keyboard Shortcuts Card -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel Spacing="20">
                        <!-- Header -->
                        <StackPanel Orientation="Horizontal" Spacing="14">
                            <Border Style="{StaticResource IconBoxStyle}" Background="#f1f5f9">
                                <materialDesign:PackIcon Kind="Keyboard" Width="22" Height="22" Foreground="#64748b"
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="14" HorizontalAlignment="Stretch">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Keyboard Shortcuts" FontSize="17" FontWeight="SemiBold" Foreground="#111827"/>
                                    <TextBlock Text="Learn all available keyboard shortcuts" FontSize="13" Foreground="#6b7280" Margin="0,3,0,0"/>
                                </StackPanel>
                                <Button Grid.Column="1" Style="{StaticResource OutlineButtonStyle}" Height="40" Padding="18,0,18,0" VerticalAlignment="Center">
                                    <TextBlock Text="View Shortcuts" FontSize="13"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- About Card -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel Spacing="20">
                        <!-- Header -->
                        <StackPanel Orientation="Horizontal" Spacing="14">
                            <Border Style="{StaticResource IconBoxStyle}" Background="#f3f4f6">
                                <materialDesign:PackIcon Kind="InformationOutline" Width="22" Height="22" Foreground="#6b7280"
                                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="About" FontSize="17" FontWeight="SemiBold" Foreground="#111827"/>
                                <TextBlock Text="Application and API version information" FontSize="13" Foreground="#6b7280" Margin="0,3,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Content -->
                        <StackPanel Spacing="12">
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                <TextBlock Text="App version:" FontSize="14" Foreground="#6b7280"/>
                                <TextBlock Grid.Column="1" Text="v1.0.0" FontSize="13" Background="#f3f4f6" Foreground="#4b5563"
                                         Padding="8,6,8,6" CornerRadius="6" FontWeight="Medium"/>
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                <TextBlock Text="Paperless-NGX API:" FontSize="14" Foreground="#6b7280"/>
                                <TextBlock Grid.Column="1" Text="v2.3.0" FontSize="13" Background="#f3f4f6" Foreground="#4b5563"
                                         Padding="8,6,8,6" CornerRadius="6" FontWeight="Medium"/>
                            </Grid>
                            <TextBlock FontSize="14" Margin="0,4,0,0">
                                <Hyperlink TextDecorations="None" Foreground="#2563eb">
                                    View on GitHub →
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" Spacing="14" HorizontalAlignment="Right" Margin="0,24,0,20">
                    <Button Style="{StaticResource OutlineButtonStyle}" Height="42" Padding="28,0,28,0">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <materialDesign:PackIcon Kind="Refresh" Width="17" Height="17"/>
                            <TextBlock Text="Reset to Defaults" FontSize="14"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource PrimaryButtonStyle}" Height="42" Padding="28,0,28,0">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <materialDesign:PackIcon Kind="CheckCircle" Width="17" Height="17"/>
                            <TextBlock Text="Save All Settings" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
